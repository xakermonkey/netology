<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:pikolo="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">




    <TextView
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Цвет сообщений"/>
    <HorizontalScrollView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scrollbars="none">
        <RadioGroup
            android:id="@+id/models_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/red_l"
                android:id="@+id/red_l_models"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/purpure_l"
                android:id="@+id/purpure_l_models"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/sapphirine_l"
                android:id="@+id/sapphirine_l_models"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/blue_l"
                android:id="@+id/blue_l_models"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/green_l"
                android:id="@+id/green_l_models"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/yellow_l"
                android:id="@+id/yellow_l_models"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/orange_l"
                android:id="@+id/orange_l_models"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/brown_l"
                android:id="@+id/brown_l_models"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/grey_l"
                android:id="@+id/grey_l_models"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/indigo_l"
                android:id="@+id/indigo_l_models"
                />

        </RadioGroup>

    </HorizontalScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:backgroundTint="?attr/colorControlHighlight"/>

    <com.github.mata1.simpledroidcolorpicker.pickers.CircleColorPicker
        custom:hue="120"
        custom:saturation="1.0"
        custom:value="1.0"

        android:id="@+id/ccp"
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:padding="10dp" />

    <!-- RING color picker -->


    <com.github.mata1.simpledroidcolorpicker.pickers.linear.HSVLinearColorPicker
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цвет кнопок"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <HorizontalScrollView
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scrollbars="none">
        <RadioGroup
            android:id="@+id/button_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/red_l"
                android:id="@+id/red_l_btn"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/purpure_l"
                android:id="@+id/purpure_l_btn"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/sapphirine_l"
                android:id="@+id/sapphirine_l_btn"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/blue_l"
                android:id="@+id/blue_l_btn"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/green_l"
                android:id="@+id/green_l_btn"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/yellow_l"
                android:id="@+id/yellow_l_btn"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/orange_l"
                android:id="@+id/orange_l_btn"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/brown_l"
                android:id="@+id/brown_l_btn"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/grey_l"
                android:id="@+id/grey_l_btn"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/indigo_l"
                android:id="@+id/indigo_l_btn"
                />

        </RadioGroup>

    </HorizontalScrollView>  <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
         android:layout_marginBottom="16dp"
        android:id="@+id/img_view_pick_color_activity"
        android:src="@drawable/ic_baseline_color_lens_24"/></LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:backgroundTint="?attr/colorControlHighlight"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цвет панели управления"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scrollbars="none">
        <RadioGroup
            android:id="@+id/panels_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/red_l"
                android:id="@+id/red_l_panels"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/purpure_l"
                android:id="@+id/purpure_l_panels"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/sapphirine_l"
                android:id="@+id/sapphirine_l_panels"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/blue_l"
                android:id="@+id/blue_l_panels"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/green_l"
                android:id="@+id/green_l_panels"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/yellow_l"
                android:id="@+id/yellow_l_panels"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/orange_l"
                android:id="@+id/orange_l_panels"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/brown_l"
                android:id="@+id/brown_l_panels"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/grey_l"
                android:id="@+id/grey_l_panels"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/indigo_l"
                android:id="@+id/indigo_l_panels"
                />

        </RadioGroup>
    </HorizontalScrollView>










</LinearLayout>
