<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POLIGON" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.POLIGON.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.POLIGON.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.POLIGON.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <declare-styleable name="YouTubeOverlay">
        <attr name="yt_playerView" format="reference" />
        <attr name="yt_seekSeconds" format="integer" />
        <attr name="yt_animationDuration" format="integer" />
        <attr name="yt_iconAnimationDuration" format="integer" />
        <attr name="yt_arcSize" format="dimension" />
        <attr name="yt_tapCircleColor" format="color" />
        <attr name="yt_backgroundCircleColor" format="color" />

        <attr name="yt_textAppearance" format="reference" />
        <attr name="yt_icon" format="reference" />
    </declare-styleable>

    <color name="dtpv_yt_tap_circle_color">#18FFFFFF</color>
    <color name="dtpv_yt_background_circle_color">#20EEEEEE</color>
    <dimen name="dtpv_yt_arc_size">40dp</dimen>

    <style name="YTOSecondsTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ExoStyledControls.Button.Center.Secondary" parent="ExoStyledControls.Button.Center">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:visibility">gone</item>
    </style>



    <style name="red" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red_l</item>
    </style>
    <style name="purpure" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purpure_l</item>
    </style>
    <style name="sapphirine" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sapphirine_l</item>
    </style>
    <style name="blue" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_l</item>
    </style>
    <style name="green" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_l</item>
    </style>
    <style name="yellow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow_l</item>
    </style>
    <style name="orange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange_l</item>
    </style>
    <style name="brown" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brown_l</item>
    </style>
    <style name="grey" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/grey_l</item>
    </style>
    <style name="indigo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/indigo_l</item>
    </style>
    <style name="CustomLoading">
        <item name="android:indeterminateDrawable">@drawable/input_settings_prof</item>
        <item name="android:width">120px</item>
        <item name="android:height">120px</item>
    </style>



</resources>